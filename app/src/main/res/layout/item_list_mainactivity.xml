<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_list_main_port"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/item_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_list_main_port"
        android:text="刘晓月"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_list_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_list_main_port"
        android:layout_alignLeft="@+id/item_list_name"
        android:text="13629563262" />
</RelativeLayout>